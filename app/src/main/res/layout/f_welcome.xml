<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".WelcomActivity$PlaceholderFragment">
    <ImageView
            android:id="@+id/welcome_im"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
               android:layout_height="match_parent"/>

    <TextView
            android:text="Contri"
            android:textSize="58sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/font1"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_tv1"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp" app:layout_constraintBottom_toTopOf="@+id/welcome_tv"/>
    <TextView
            android:id="@+id/welcome_tv"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textSize="30sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="284dp"
            app:layout_constraintBottom_toBottomOf="parent"/>



    <Button android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
            android:text="Next"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:visibility="invisible"
            android:drawableEnd="@drawable/right_arrow"
    android:id="@+id/welcome_cv"
    android:layout_margin="10dp"
    >
    </Button>
</android.support.constraint.ConstraintLayout>