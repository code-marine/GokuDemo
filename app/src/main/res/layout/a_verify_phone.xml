<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerifyPhone">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
            <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
            app:cardCornerRadius="75dp"
            android:layout_gravity="center">
                <ImageView android:id="@+id/verify_photo_im"
                           android:contentDescription="@string/userprofileimage"
                           android:layout_width="150dp" android:layout_height="150dp"/>
            </android.support.v7.widget.CardView>

            <TextView android:id="@+id/verify_name_tv"
                      android:textSize="26sp"
                      android:textStyle="bold"
                      android:textColor="#000"
                      android:fontFamily="casual"
                      android:text="sdasd"
                      android:textAlignment="center"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="@string/verify_phone_number"
            android:textSize="20sp"
                      android:layout_marginStart="10dp"
            android:textColor="#000"
            android:layout_marginTop="20dp"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="0dp"
            android:id="@+id/verify_container_fl"
            android:layout_weight="1">
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar android:id="@+id/progress_circular"
                 android:padding="120dp"
                 android:visibility="invisible"
                 android:layout_width="match_parent" android:layout_height="match_parent"
                 android:background="#66000000"
    />
</android.support.constraint.ConstraintLayout>